{
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**",
    "**/node_modules/**/dist/**",
    "**/node_modules/@scratch/scratch-svg-renderer/dist/**",
    "**/node_modules/**/dist/**/*.js"
  ],
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,

    /* Modules */
    "module": "commonjs",
    "types": ["./src/types.d.ts"],

    /* Emit */
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/types/",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": false,

    /* Completeness */
    "skipLibCheck": true
  }
}
