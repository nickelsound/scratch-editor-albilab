{
  "name": "task-herder",
  "version": "0.0.0",
  "description": "An asynchronous task runner with configurable rate limiting / throttling and concurrency control.",
  "keywords": [
    "rate limit",
    "throttle",
    "task",
    "queue",
    "concurrency",
    "concurrent"
  ],
  "author": "Scratch Foundation",
  "license": "AGPL-3.0-only",
  "private": true,
  "type": "module",
  "files": [
    "LICENSE",
    "dist"
  ],
  "main": "dist/task-herder.umd.cjs",
  "module": "dist/task-herder.js",
  "exports": {
    ".": {
      "import": "./dist/task-herder.js",
      "require": "./dist/task-herder.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "format": "prettier --write . && eslint --fix",
    "lint": "eslint && prettier --check .",
    "preview": "vite preview"
  },
  "devDependencies": {
    "eslint": "9.39.1",
    "eslint-config-scratch": "12.0.24",
    "prettier": "3.6.2",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "dependencies": {
    "p-limit": "7.2.0"
  }
}
