{
  "name": "@scratch/task-herder",
  "version": "12.3.0",
  "description": "An asynchronous task runner with configurable rate limiting / throttling and concurrency control.",
  "keywords": [
    "rate limit",
    "throttle",
    "task",
    "queue",
    "concurrency",
    "concurrent"
  ],
  "author": "Scratch Foundation",
  "license": "AGPL-3.0-only",
  "type": "module",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "main": "dist/task-herder.umd.cjs",
  "module": "dist/task-herder.js",
  "exports": {
    ".": {
      "import": "./dist/task-herder.js",
      "require": "./dist/task-herder.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "dev": "vite",
    "build": "tsc --project tsconfig.build.json && vite build",
    "format": "prettier --write . && eslint --fix",
    "lint": "eslint && prettier --check .",
    "preview": "vite preview",
    "test": "npm run lint && vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "4.0.15",
    "eslint": "9.39.2",
    "eslint-config-scratch": "12.0.42",
    "prettier": "3.7.4",
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "unplugin-dts": "1.0.0-beta.6",
    "vite": "npm:rolldown-vite@7.2.11",
    "vitest": "4.0.15"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.11"
  }
}
