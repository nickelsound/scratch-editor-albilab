{
  "name": "@scratch/scratch-backend",
  "version": "1.0.0",
  "description": "Backend server for running Scratch projects as services on Raspberry Pi",
  "main": "src/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.js",
    "build": "node esbuild.config.js",
    "build:watch": "node esbuild.config.js --watch",
    "prebuild": "node -e \"require('fs').mkdirSync('dist', {recursive: true})\""
  },
  "dependencies": {
    "@scratch/scratch-vm": "file:../scratch-vm",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "ws": "^8.14.2",
    "mime": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "esbuild": "^0.19.0"
  }
}
